@model Autoservis.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Autoservis.MjestoList listaMjesta = Autoservis.MjestoList.Get();

}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Klijent.PrezimeKlijenta, "Prezime", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Klijent.PrezimeKlijenta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Klijent.PrezimeKlijenta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Klijent.ImeKlijenta, "Ime", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Klijent.ImeKlijenta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Klijent.ImeKlijenta, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Klijent.UlicaKlijenta, "Ulica", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Klijent.UlicaKlijenta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Klijent.UlicaKlijenta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Klijent.KucniBrojKlijenta, "Kućni broj", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Klijent.KucniBrojKlijenta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Klijent.KucniBrojKlijenta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Klijent.IdMjesto, "Mjesto", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.DropDownListFor(m => m.Klijent.IdMjesto, new SelectList(listaMjesta, "Key", "Value"), new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.Klijent.IdMjesto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
