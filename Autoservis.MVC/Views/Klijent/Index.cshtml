@model AutoservisBLL.KlijentInfoList

@{
    ViewBag.Title = "Klijenti";
}

<table class="tablica">
    <tr>
        <th>
            Osoba
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.NazOsobe, "Details", new { IdKlijenta = item.IdKlijenta })
            </td>
            <td>
                @using (Html.BeginForm("Delete", "Klijent", new { IdKlijenta = item.IdKlijenta }))
                {
                    <a class="delete">Obriši</a>
                }
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Novi klijent", "Create")
</p>