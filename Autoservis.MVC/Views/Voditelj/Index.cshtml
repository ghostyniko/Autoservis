@model Autoservis.BLL.TerminPregledaInfoList

@if (false)
{
    <script src="../../Scripts/jquery-1.5.1-vsdoc.js" type="text/javascript"></script>
}


<table class="table table-striped table-light table-hover">
    <tr>
        <th>
            Termin
        </th>
        <th>
            Klijent
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)

    {
        <tr>
            <td>
                @Html.Encode(item.NazTermina)
            </td>
            <td>
                @Html.Encode(item.NazKlijent)
            </td>
            <td>
                @Html.Label("Labela", new {@class=item.Status})
            </td>

            @if ((item.Status == Autoservis.BLL.Status.Ponisteno) || (item.Status == Autoservis.BLL.Status.PrihvatioAutoservis) || (item.Status == Autoservis.BLL.Status.PrihvatioKlijent))
        {
            <td>

                @Html.ActionLink("Detalji", "Details","TerminPregleda", new { IdTermina = item.IdTermina },new { @class="btn-sm btn-primary",style="text-decoration:none;"})
                @using (Html.BeginForm("IzbrisiTermin", "Voditelj", new { IdTermina = item.IdTermina },FormMethod.Post, new { style = "display:inline;" }))
                {
                    <a class="delete btn-sm btn-danger">Obriši</a>
                }

            </td>


        }
        else if (item.Status == Autoservis.BLL.Status.PonudaKlijenta)
        {
            <td>@Html.ActionLink("Ponudi novi termin", "UrediTermin", new { IdTermina = item.IdTermina }, null)</td>
            <td>@Html.ActionLink("Prihvati termin", "PrihvatiTermin", new { IdTermina = item.IdTermina }, null)</td>
        }
        </tr>
    }

</table>

@section JavaScript{
    <script language="javascript" type="text/javascript">

        $(function () {
            $(".PonudaKlijenta").text("Nova ponuda");
            $(".PonudaKlijenta").css("color", "orange");
        });

        $(function () {
            $(".PonudaAutoservisa").text("Obrađuje se");
            $(".PonudaAutoservisa").css("color", "orange");
        });

        $(function () {
            $(".PrihvatioAutoservis").text("Prihvaćeno");
            $(".PrihvatioAutoservis").css("color", "green");
        });

        $(function () {
            $(".PrihvatioKlijent").text("Prihvaćeno");
            $(".PrihvatioKlijent").css("color", "green");
        });

        $(function () {
            $(".Ponisteno").text("Poništeno");
            $(".Ponisteno").css("color", "red");
        });
    </script>
}