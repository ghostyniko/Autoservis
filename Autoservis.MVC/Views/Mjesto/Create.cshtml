@model Autoservis.BLL.Mjesto


@{
    ViewBag.Title = "Unos novog mjesta";
}


@using (Html.BeginForm("Create", "Mjesto", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Unos novog mjesta.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.NazivMjesta, "Naziv mjesta", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.NazivMjesta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.NazivMjesta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PostanskiBroj, "Poštanski broj", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.PostanskiBroj, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.PostanskiBroj, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Unesi" />
        </div>
    </div>

}


